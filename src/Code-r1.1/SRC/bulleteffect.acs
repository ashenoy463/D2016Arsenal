// Pain effects by Sergeant_Mark_IV
// Graphics can be found inside Bleed.wad

#library "paineffect"
#include "zcommon.acs"

script "PBUL1" (void)
{
	if((CheckInventory("DisablePainEffects") == 1)||(CheckInventory("IsPlayingAsDM") == 1)||(CheckInventory("IsPlayingAsCoop") == 1)||(CheckInventory("IsTankPlayer") == 1)||(CheckInventory("IsVehiclePlayer") == 1)||(CheckInventory("IsDemonPlayer") == 1))
		terminate;

	SetHudSize(480,300,1);

	delay(1);
	setfont("PBULA1");
	hudmessage(s:"A"; HUDMSG_FADEOUT, 0, CR_UNTRANSLATED, 200.0, 100.0, 0.5);
	delay(8);
	setfont("PBULA2");
	hudmessage(s:"A"; HUDMSG_FADEOUT, 0, CR_UNTRANSLATED, 200.0, 100.0, 0.5);
	delay(8);
	setfont("PBULA3");
	hudmessage(s:"A"; HUDMSG_FADEOUT, 0, CR_UNTRANSLATED, 200.0, 100.0, 0.5);
	delay(8);
}


